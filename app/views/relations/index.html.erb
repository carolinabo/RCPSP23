<h1>Relations</h1>
<table class="table" id="relation">
  <tr>
    <th>Job</th>
    <th>Successor</th>
   <th></th>
  </tr>

  <% @relations.each do |relation| %>
      <tr>
        <td><%= best_in_place relation.job, :name, :type => :input %></td>
        <td><%= relation.successor.name %></td>
         <td><%= link_to 'Destroy', relation, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

