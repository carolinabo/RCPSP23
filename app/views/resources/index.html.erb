<h1>Resources</h1>
<table class="table" id="resources">
  <tr>
    <th>Name</th>
    <th>Capacity</th>
    <th></th>
  </tr>

  <% @resources.each do |resource| %>
      <tr>
        <td><%= best_in_place resource, :name, :type => :input, :nil => "Click me to add content!" %></td>
        <td><%= best_in_place resource, :capacity, :type => :input %></td>
        <td><%= link_to 'delete', resource, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

